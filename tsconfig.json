{
  "compilerOptions": {
    "module": "system",
    "moduleResolution": "node",
    "target": "ES5",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build/ts_out",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "build",
    "main"
  ]
}